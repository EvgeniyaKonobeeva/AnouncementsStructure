<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppThemeAnnonce"
    android:background="@color/app_bar">

    <ImageButton
        android:id="@+id/back_press"
        android:contentDescription="eee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/header"
        android:src="@drawable/arrow_back"
        android:background="?android:selectableItemBackground"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/save"
        android:contentDescription="ttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/header"
        android:src="@drawable/ic_check"
        android:background="?android:selectableItemBackground"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/back_press"
        app:layout_constraintRight_toLeftOf="@+id/save"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/gray5"
        />

</android.support.constraint.ConstraintLayout>